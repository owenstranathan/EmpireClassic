# Declare the project.
# CXX means that the project is written in C++.
project(EmpireClassic++ CXX)

# We require CMake-2.8 in order to build the program.
cmake_minimum_required(VERSION 2.8)

# Enable compilation with C++11
# Turn on all warnings and make them errors.
set(CMAKE_CXX_FLAGS "-Wall -std=c++11")

# Add an executable program to be built from the
# given source code files.
add_executable(empireClassic++ display.cpp display.hpp empire.cpp empire.hpp interface.cpp interface.hpp main.cpp map.cpp map.hpp ResourcePath.hpp)

target_link_libraries(empireClassic++ sfml-system sfml-window sfml-graphics sfml-audio)
